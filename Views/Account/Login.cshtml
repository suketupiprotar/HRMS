
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@using HRMSWithTheme.CustomModels
@model LoginCustomModel

<h2 class="text-center">Login</h2>
<main>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img class="img-fluid" src="~/Content/images/login.jpg" alt="Sign In Image" />
            </div>
            <div class="col-md-6 pt-5 mt-5">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken();
                    @Html.LabelFor(x => x.Email, new { @class = "fw-bold" });
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" });
                    @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                    <br>
                    @Html.LabelFor(x => x.Password, new { @class = "fw-bold" });
                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password" });
                    @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                    <br>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <br>
                    <button class="btn  btn-primary">Sign In</button>
                    <br>
                    <span>Not have an Account?<a href="@Url.Action("SignUp", "Account")"><p>Sign Up Here</p></a></span>
                }  
                
            </div>
        </div>
    </div>


</main>

